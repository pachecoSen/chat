- var menu = [ { "name" : "Inicio", "route" : "./admin/main" }, { "name" : "Usuarios", "route" : "./admin/users" }, { "name" : "Grupos", "route" : "./admin/groups" } ];
header
    // NaviBar
    nav.navbar.navbar-expand-lg.navbar-light.bg-primary.fixed-top
        a.navbar-brand.text-white#title(href="./admin/main")
            img.d-inline-block.align-top(src="./images/ico.svg", width=30 height=30 alt="Icono")
        if !noMenu
            button.navbar-toggler(type="button", data-toggle="collapse", data-target="#mainMenu", aria-controls="mainMenu", aria-expanded="false", aria-label="Toggle navigation")
                span.navbar-toggler-icon
            div.collapse.navbar-collapse#mainMenu
                ul.navbar-nav
                    each m in menu
                        li.nav-item
                            a.nav-link.text-light(href=m.route) #{m.name}